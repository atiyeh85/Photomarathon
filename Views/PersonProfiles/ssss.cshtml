@model PhotogeraphyGrant.Models.Search
@{
    ViewBag.Title = "..::..";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
      
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    ارسال مجدد شناسه امنیتی به آدرس پست الکترونیک
                </div>
                <div class="panel-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="col-lg-12">
                            <div class="alert alert-danger">
                                @TempData["Error"]
                            </div>
                        </div>
                    }
                    <div class="col-md-12">
                        <span style="color:#a70808" class="icon-star-empty "> </span>

                        شماره تلفن همراه
                        <div class="input-group" style="margin-bottom: 10px">
                            <span class="input-group-addon">
                                <i class="icon-envelope-alt icon-2x">
                                </i>
                            </span>
                            @Html.TextBoxFor(model => model.Mobile, new { @class = "form-control input-lg", placeholder = "  آدرس الکترونیک  " })
                        </div>
                        <b>
                            @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })
                        </b>
                    </div>
                    <div class="col-md-12">
                        <span style="color:#a70808" class="icon-star-empty "> </span>
                        کد ملی
                        <div class="input-group" style="margin-bottom: 10px">
                            <span class="input-group-addon">
                                <i class="icon-envelope-alt icon-2x">
                                </i>
                            </span>
                            @Html.TextBoxFor(model => model.NationalCode, new { @class = "form-control input-lg", placeholder = "  آدرس الکترونیک  " })
                        </div>
                        <b>
                            @Html.ValidationMessageFor(model => model.NationalCode, "", new { @class = "text-danger" })
                        </b>
                    </div>
                    <div class="col-md-12">
                        <input type="submit" value="جستجو " class="btn btn-success col-xs-offset-5" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
