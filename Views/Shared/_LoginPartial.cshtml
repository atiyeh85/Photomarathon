@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @if (User.IsInRole("Admin"))
            {
                @Html.ActionLink("جناب آقای  " +" "+ User.Identity.GetUserName()+" " + "خوش آمدید "  + "!", "ListPerson", "PersonProfiles", routeValues: null, htmlAttributes: new { title = "Manage" })

            }
            else
            {
                @Html.ActionLink("جناب آقای " + " " + User.Identity.GetUserName() + " " + "خوش آمدید " +"!", "ListPerson", "PersonProfiles", routeValues: null, htmlAttributes: new { title = "Manage" })

            }
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fas fa-sign-out-alt"></i> خروج</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@*@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })*@</li>
        <li>@Html.ActionLink(" ورود", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
